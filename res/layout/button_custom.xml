<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true"
        style="?android:attr/buttonStyleSmall" >
    <shape>
      <solid
          android:color="#0B7ADB" />
      <stroke
          android:width="3dp"
          android:color="#004BCC" />
      <corners
          android:radius="6dp" />
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
    </shape>
    
  </item>
  <item android:state_pressed="false" 
      style="?android:attr/buttonStyleSmall">
    <shape>
      <gradient
          android:startColor="#0B7ADB"
          android:endColor="#09D6D3"
          android:angle="270" />
      <stroke
          android:width="1dp"
          android:color="#992f2f" />
      <corners
          android:radius="6dp" />
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
    </shape>
  </item>
</selector>