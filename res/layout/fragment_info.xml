		            android:id="@+id/txtParam88"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="@string/defVal3"
		            style="@style/text_info_param" />
			</RelativeLayout>
			
	         <RelativeLayout
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
