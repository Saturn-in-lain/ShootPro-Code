	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/defString" 
	            style="@style/text_info_param"/>
        </RelativeLayout>

        <RelativeLayout 
			android:layout_width="match_parent"
	        android:layout_height="wrap_content">
	        <TextView
	            android:id="@+id/txtCalcParam2"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/currentG"
	            style="@style/text_info" />

	        <TextView
	            android:id="@+id/txtCalcParam2_1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/defString" 
	            style="@style/text_info_param"/>
        </RelativeLayout>
        
        <RelativeLayout 
			android:layout_width="match_parent"
	        android:layout_height="wrap_content">
	        <TextView
	            android:id="@+id/txtCalcParam3"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/densityDryAir"
	            style="@style/text_info" />

	        <TextView
	            android:id="@+id/txtCalcParam3_1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/defString" 
	            style="@style/text_info_param"/>
        </RelativeLayout>
<!-- line============================================================================== -->

        <Button
