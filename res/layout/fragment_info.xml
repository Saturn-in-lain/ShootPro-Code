			   		android:layout_height="50dp"
			   		android:scaleType="fitXY"
	                android:layout_marginLeft="78dp"
	                android:button="@layout/button_radio_custom"  />
		    	<TextView
	               android:id="@+id/txt44"
	               style="@style/text_ammo"
	               android:layout_width="wrap_content"
	               android:layout_height="wrap_content"
          	       android:text="@string/farenheit"/>
       		</LinearLayout>
        </LinearLayout>
        
        <View
            android:id="@+id/line5"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/bluelight" />
                
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txtParam6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="@string/latitude"
                style="@style/text_ammo" />

            <EditText
                android:id="@+id/edtTxtParam6"
                style="@style/edit_info"
                android:layout_width="110dp"
                android:layout_height="35dp"
                android:background="@layout/edit_text" >
            </EditText>
        </RelativeLayout>
        
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txtParam13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="@string/azimuth"
                style="@style/text_ammo" />

            <EditText
                android:id="@+id/edtTxtParam13"
                style="@style/edit_info"
                android:layout_width="110dp"
                android:layout_height="35dp"
                android:background="@layout/edit_text" >
            </EditText>
        </RelativeLayout>
        
        <RelativeLayout
            android:layout_width="fill_parent"
