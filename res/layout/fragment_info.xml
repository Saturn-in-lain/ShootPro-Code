            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginRight="15dp"
            android:text="@string/btnCalculate" 
            android:layout_gravity="center"
            android:background="@layout/button_custom"
            style="@style/button_text"/>

        <View
            android:id="@+id/line4"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/bluelight" />
        

        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

	        <ToggleButton
	            android:id="@+id/tglBtnConstParams"
	            android:layout_width="85dp"
	            android:layout_height="45dp"
	            android:layout_alignParentRight="true"
	            android:layout_marginRight="15dp"
	            android:textOn="@string/tglBtnConstParamsShow"
	            android:textOff="@string/tglBtnConstParamsHide"
	            android:checked="true" />

	        <TextView
	            android:id="@+id/txtWeatherConstParameter"
	            style="@style/text_header"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentTop="true"
	            android:layout_centerHorizontal="true"
	            android:gravity="center"
	            android:text="@string/constantInformation"
	            android:visibility="visible" />
        </RelativeLayout>
